<header class="module-header update-header">
    <h3 class="title">Update a customer username and email</h3>
</header>

<form class="create-main" data-abide="ajax">
    <input type="hidden" name="row_id" value="<%row_id%>">
    <div class="alert-field"></div>
    <div class="data-abide-input-container">
        <label for="first_name">First Name</label>
        <input type="text" id="first_name" name="first_name" placeholder="first name" required value="<%first_name%>">
        <small class="error">First name is required</small>
    </div>
    <div class="data-abide-input-container">
        <label for="last_name">Last Name</label>
        <input type="text" id="last_name" name="last_name" placeholder="last name" required value="<%last_name%>">
        <small class="error">Last name is required</small>
    </div>
    <div class="data-abide-input-container">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="email" required value="<%email%>">
        <small class="error">User email is required</small>
    </div>
    <input type="submit" datatable-action="update" class="submit-button" value="Save" datatable-trigger style="margin-bottom:1.875rem;">
</form>
